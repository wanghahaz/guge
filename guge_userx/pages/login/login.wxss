.login {
    width: 100%;
}

input::-webkit-input-placeholder {
    /*WebKit browsers*/
    color: #dcdddd;
}

input::-moz-input-placeholder {
    /*Mozilla Firefox*/
    color: #dcdddd;
}

input::-ms-input-placeholder {
    /*Internet Explorer*/
    color: #dcdddd;
}

image {
    max-width: 100%;
    height: 100%;
}


/*头部logo*/

.logo {
    width: 381rpx;
    height: 200rpx;
    margin: auto;
    margin-top: 60rpx;
}


/*中间内容*/

.arrogant {
    width: 600rpx;
    height: 610rpx;
    background-color: #ffffff;
    box-shadow: 0rpx 1rpx 11.6rpx 1.4rpx rgba(0, 64, 152, 0.27);
    border-radius: 30rpx;
    margin: auto;
    margin-top: 60rpx;
}

.arrogantone {
    width: 520rpx;
    height: 142rpx;
    margin: auto;
    display: flex;
    justify-content: space-between;
    border-bottom: 4rpx solid #d2cfcf;
}

.arrogantone:nth-child(1) {
    padding-top: 75rpx;
}

.arrogantone:nth-child(2) {
    padding-top: 0rpx;
}

.arrogantone>image {
    margin: auto;
    width: 44rpx;
    height: 71rpx;
}

.arrogantone .huoqu {
    width: 120rpx;
    height: 65rpx;
}

.arrogantone .yanzheng {
    width: 37rpx;
    height: 72rpx;
}

.shouji {
    width: 400rpx;
    height: 25rpx;
    font-family: MicrosoftYaHei;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    margin: auto;
}

.code {
    width: 230rpx;
    height: 25rpx;
    font-family: MicrosoftYaHei;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    margin: auto;
}

.denglu {
    width: 100%;
    height: 85rpx;
    display: flex;
    margin-top: 51rpx;
}

.denglu>image {
    width: 411rpx;
    height: 100%;
    margin: auto;
}


/* 协议 */

.agreement {
    display: flex;
    justify-content: space-around;
    width: 450rpx;
    margin: auto;
    padding: 50rpx 0 0 0;
}

.agreementleft {
    width: 60rpx;
    display: flex;
}

.agreementleft>image {
    width: 30rpx;
    height: 30rpx;
    margin: auto;
}

.agreementright {
    font-size: 27rpx;
    color: #004098;
}


/*脚部*/

.foot {
    width: 585rpx;
    height: 106rpx;
    margin: auto;
    margin-top: 75rpx;
    display: flex;
    justify-content: space-between;
    font-size: 22rpx;
    color: gray;
    text-align: center;
}

.foot>view {
    display: flex;
    flex-direction: column;
}

.foot>view>text {
    margin-top: 10rpx;
}

.fa>image {
    width: 95rpx;
    height: 57rpx;
    margin: auto;
}

.yun>image {
    width: 78rpx;
    height: 68rpx;
    margin: auto;
}

.gu>image {
    width: 60rpx;
    height: 63rpx;
    margin: auto;
}

.shang>image {
    height: 63rpx;
    width: 91rpx;
    margin: auto;
}


/*登录倒计时*/

.count {
    width: 166rpx;
    height: 100%;
    text-align: center;
    line-height: 142rpx;
}


/* 跳过 */

.skip {
    font-size: 28rpx;
    padding: 32rpx 0;
    color: #004098;
    text-align: center;
}


/*授权*/

page {
    height: 100%;
}

button::after {
    border: none;
}

.warp button {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    border-radius: 0px 0px 0px 0px;
    color: transparent;
    background: transparent no-repeat center center;
    background-size: cover;
}